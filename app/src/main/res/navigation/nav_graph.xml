<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.blueray.kees.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_allCategoriesFragment"
            app:destination="@id/allCategoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/allCategoriesFragment"
        android:name="com.blueray.kees.ui.fragments.AllCategoriesFragment"
        android:label="fragment_all_categroies"
        tools:layout="@layout/fragment_all_categroies" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.blueray.kees.ui.fragments.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.blueray.kees.ui.fragments.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/cartPageFragment"
        android:name="com.blueray.kees.ui.fragments.CartPageFragment"
        android:label="CartPageFragment" />
</navigation>