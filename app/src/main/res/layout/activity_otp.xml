<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.OtpActivity"
    android:background="@drawable/otpbackground"
    >
    <include
        android:id="@+id/included_tap"
        layout="@layout/otp_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/included_tap"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.blueray.kees.helpers.GifView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/phone_gif"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textColor="@color/purpleColor"
            android:textSize="23sp"
            android:fontFamily="@font/cairo_bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="We Have Sent You a Verification Code Via Your Phone Number"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/textGrey47"
            android:textSize="14sp"
            android:layout_marginTop="20sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/phoneNumberET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+962781111111"
                android:textColor="@color/textGrey47"
                android:fontFamily="@font/cairo_medium"
                android:textStyle="bold"
                android:textSize="21sp"

                />
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/otp_back_background"
                android:src="@drawable/edit_phone"
                android:padding="13dp"
                />
        </LinearLayout>


        <com.mukeshsolanki.OtpView
            android:layout_margin="20dp"
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center"
            android:itemBackground="@drawable/otpview"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:text="123456"
            app:OtpHideLineWhenFilled="true"
            app:OtpItemCount="6"
            app:OtpItemSpacing="6dp"
            app:OtpState_filled="true"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cornerRadius="25dp"
            android:backgroundTint="@color/darkPurple"
            android:text="Send"
            android:textSize="16sp"
            android:fontFamily="@font/cairo_bold"
            android:textAllCaps="false"
            android:layout_margin="25dp"
            />
        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resend"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>