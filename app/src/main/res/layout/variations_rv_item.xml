<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="20.0 JOD"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo_bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/oldPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/priceTv"
            app:layout_constraintStart_toStartOf="@id/priceTv"
            android:text="30.0 JOD"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/cairo_bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/oldPriceTv"
            app:layout_constraintEnd_toEndOf="@id/oldPriceTv"
            app:layout_constraintTop_toTopOf="@id/oldPriceTv"
            app:layout_constraintBottom_toBottomOf="@id/oldPriceTv"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/colorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            app:layout_constraintTop_toBottomOf="@id/oldPriceTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/sizeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/colorTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="100 meter"
            android:textSize="16sp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/weightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sizeTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Heavy"
            android:textSize="16sp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>