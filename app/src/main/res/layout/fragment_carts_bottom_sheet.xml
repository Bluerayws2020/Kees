<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.CartsBottomSheetFragment"
    android:orientation="vertical"
    >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#1E474747"
        android:clickable="false"
        android:layout_gravity="center"
        app:rippleColor="#00FFFFFF" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Carts"
        android:textColor="@color/darkPurple"
        android:fontFamily="@font/cairo_bold"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:id="@+id/weeklyCartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#F6F6F6"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/cart"
                app:tint="@color/purpleColor"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Weekly Cart"
            android:textColor="@color/darkPurple"
            android:fontFamily="@font/cairo_bold"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/donationCartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#F6F6F6"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/cart"
                app:tint="@color/purpleColor"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Donations Cart"
            android:textColor="@color/darkPurple"
            android:fontFamily="@font/cairo_bold"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>


</LinearLayout>