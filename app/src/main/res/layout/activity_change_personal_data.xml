<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LoginActivity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/background"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="-90dp"
            android:layout_marginBottom="-90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="40dp"
            />
        <include
            android:id="@+id/included_tap"
            layout="@layout/home_inner_app_bar"
            />

        <TextView
            android:id="@+id/signInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skdjfsdjsv"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/included_tap"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/cairo_bold"
            android:visibility="gone"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/signInLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="24dp"
            android:layout_marginBottom="50dp"
            app:cardElevation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="personal Information"
                    android:textColor="@color/darkPurple"
                    android:textSize="19sp"
                    android:fontFamily="@font/cairo_bold"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="25dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner of the Establishment Name"
                    android:textColor="@color/darkPurple"
                    android:textSize="17sp"
                    android:fontFamily="@font/cairo_bold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <EditText
                        app:layoutDescription="@id/ownerNameET"
                        android:id="@+id/ownerNameET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/cairo_bold"
                        android:paddingStart="15sp"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Establishment Name"
                    android:textColor="@color/darkPurple"
                    android:textSize="17sp"
                    android:fontFamily="@font/cairo_bold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <EditText
                        app:layoutDescription="@id/establishmentNameET"
                        android:id="@+id/establishmentNameET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/cairo_bold"
                        android:paddingStart="15sp"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout><TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/darkPurple"
                android:textSize="17sp"
                android:fontFamily="@font/cairo_bold"
                android:layout_marginTop="22dp"
                android:layout_marginStart="25dp"
                />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <EditText
                        app:layoutDescription="@id/establishmentNameET"
                        android:id="@+id/emailEt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/cairo_bold"
                        android:paddingStart="15sp"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
<!--                <com.google.android.material.button.MaterialButton-->
<!--                    android:id="@+id/continueBtn"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="60dp"-->
<!--                    app:cornerRadius="25dp"-->
<!--                    android:text="Save"-->
<!--                    android:textSize="16sp"-->
<!--                    android:fontFamily="@font/cairo_bold"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:layout_margin="25dp"-->
<!--                    />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Day"
                        android:textColor="@color/darkPurple"
                        android:textSize="19sp"
                        android:fontFamily="@font/cairo_bold"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="25dp"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"

                        android:layout_marginTop="10dp"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/dayRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            tools:listitem="@layout/day_item"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Time"
                        android:textColor="@color/darkPurple"
                        android:textSize="17sp"
                        android:fontFamily="@font/cairo_bold"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="25dp"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/timeRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            tools:listitem="@layout/day_item"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose the Number of Iterations"
                        android:textColor="@color/darkPurple"
                        android:textSize="17sp"
                        android:fontFamily="@font/cairo_bold"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="25dp"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edit_text"
                        >

                        <Spinner
                            app:layoutDescription="@id/emailEt"
                            android:id="@+id/genderSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/cairo_bold"
                            android:paddingStart="15sp"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:paddingEnd="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/continueBtn"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:cornerRadius="25dp"
                        android:text="Save"
                        android:backgroundTint="@color/darkPurple"
                        android:textSize="16sp"
                        android:fontFamily="@font/cairo_bold"
                        android:textAllCaps="false"
                        android:layout_margin="25dp"
                        />


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>